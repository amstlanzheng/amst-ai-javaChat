<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.amst.ai.mapper.SchoolMapper">

    <resultMap id="BaseResultMap" type="com.amst.ai.model.entity.SchoolEntity">
        <!--@Table school-->
                    <result property="id" column="id" jdbcType="VARCHAR"/>
                    <result property="name" column="name" jdbcType="VARCHAR"/>
                    <result property="city" column="city" jdbcType="VARCHAR"/>
            </resultMap>

    <sql id="Base_Column_List">
        id,name,city
    </sql>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tq_mobile.school(name, city)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.name}, #{entity.city})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tq_mobile.school(name, city)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.city})
        </foreach>
        on duplicate key update
         name = values(name) , city = values(city)     </insert>

</mapper>

